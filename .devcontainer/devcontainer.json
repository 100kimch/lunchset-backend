{
  "name": "FastAPI DevContainer",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "..",
    "args": { "PLATFORM": "${localEnv:DOCKER_DEFAULT_PLATFORM}" }
  },
  "appPort": [
    8000
  ],
  "forwardPorts": [
    8000,
    5678
  ],
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-azuretools.vscode-docker",
        "ms-python.debugpy"
      ]
    }
  },
  "postCreateCommand": "pip install --no-cache-dir -r requirements.txt && pip install debugpy",
  "remoteUser": "vscode"
}