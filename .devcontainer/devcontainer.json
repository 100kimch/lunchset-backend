{
  "name": "FastAPI DevContainer",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "..",
    "args": {
      "PLATFORM": "linux/arm64"
    }
  },
  "appPort": [
    8000
  ],
  "forwardPorts": [
    8000,
    5678
  ],
  "postCreateCommand": "pip install --no-cache-dir -r requirements.txt && pip install debugpy && uvicorn app.main:app --host 0.0.0.0 --port 8000 --reload",
  "remoteUser": "root",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-azuretools.vscode-docker",
        "ms-python.debugpy"
      ]
    }
  }
}